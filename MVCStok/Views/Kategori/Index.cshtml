@using MVCStok.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<KATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        { 
            <tr>

                <td>@item.KATEGORID</td>
                <td>@item.KATEGORIAD</td>
                <td> <a href="/Kategori/Sil/@item.KATEGORID" class="btn btn-success">Sil</a></td>
                <td> <a href="/Kategori/KategoriGetir/@item.KATEGORID" class="btn btn-danger">Güncelle</a></td>
            </tr>
            
                
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa=>Url.Action("Index", new {sayfa}))
<a href="/Kategori/YeniKategori/" class="btn btn-primary">Yeni Kategori</a>
