@model MVCStok.Models.Entity.URUNLER
@{
    ViewBag.Title = "YeniÜrün";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
 
<form class="form-group" method="post">

    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNADI" required="" maxlength="30" />
    </div>
    <div>
        <label> Kategori seçiniz</label>
        @Html.DropDownListFor(x => x.KATEGORILER.KATEGORID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="FİYAT" required="" />
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="MARKA" required="" />
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="STOK" required="" />
    </div>
    <br />
    <div>
        <button class="btn btn-info">Ürün Ekleme</button>
    </div>
</form>

