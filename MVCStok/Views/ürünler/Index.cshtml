@using MVCStok.Models.Entity
@model List<URUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Id</th>
            <th>Ürün Adı</th>
            <th>Ürün Kategori</th>
            <th>Fiyat</th>
            <th>Marka </th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <td>@urn.URUNID</td>
                <td>@urn.URUNADI</td>
                <td>@urn.KATEGORILER.KATEGORIAD</td>
                <td>@urn.FİYAT</td>
                <td>@urn.MARKA</td>
                <td>@urn.STOK</td>
                <td> <a href="/ürünler/Sil/@urn.URUNID" class="btn btn-danger">Sil</a></td>
                <td> <a href="/ürünler/UrunGetir/@urn.URUNID" class="btn btn-success">Güncelle</a></td>

            </tr>

        }
    </tbody>
</table>
<a href="/ürünler/YeniÜrün/" class="btn btn-primary">Ürün Ekle</a>


<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>